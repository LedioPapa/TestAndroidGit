<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ledi.testandroidgit.MainActivity">

    <TextView
        android:id="@+id/fusha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/butoni"
        android:layout_alignLeft="@+id/butoni"
        android:layout_alignRight="@+id/butoni"
        android:layout_alignStart="@+id/butoni"
        android:layout_centerVertical="true"
        android:text="@string/initial_text"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/butoni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fusha"
        android:layout_centerHorizontal="true"
        android:text="@string/click_here" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fusha"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:contentDescription="@string/smiley_image" />

</RelativeLayout>
